{
  "name": "backend-code-test",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "dev": "cross-env NODE_ENV=dev-mongo ts-node-dev --ignore-watch node_modules --inspect=0.0.0.0:9267 ./src/api/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "NODE_ENV=dev jest --forceExit --coverage --verbose",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "mongodb": "^3.6.6",
    "uuid-validate": "0.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/lusca": "^1.6.1",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^13.13.4",
    "@types/supertest": "^2.0.9",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "cross-env": "^7.0.2",
    "errorhandler": "^1.5.1",
    "eslint": "^6.8.0",
    "jest": "^26.0.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "uuid": "^8.3.2"
  }
}
